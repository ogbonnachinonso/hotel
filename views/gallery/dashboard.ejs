<%- include('../partials/head')-%>

<!-- main content -->
<div class="wrapper mt-5">

  <div class="row">
    <div class="col-12 col-m-12 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h3>
            Gallery
          </h3>
          <i class="fas fa-ellipsis-h"></i>
        </div>
        <%- include('../partials/message')-%>
        <div class="card-content">
          <table>
            <thead>
              <tr>
                <th>Description</th>
                <!-- <th>Date</th> -->
                <th>Image</th>
                <th><button type="button" class="btn btn-outline-danger btn-rounded btn-sm px-2"><a href="/create"
                      class="fas fa-pencil-alt mt-0"></a>
                    <i></i> </button></th>
              </tr>
            </thead>
            <tbody>
              <% galleries.forEach((gallery)=>{%>
              <tr>
                <td><%= gallery.description %></td>
                <!-- <td><%= gallery.createdAt.toLocaleDateString() %></td> -->
                <td><%= gallery.imgUrl %></td>
                <td>
                  <i class="bg-success"></i>
                  <a href="/editGallery/<%= gallery.id %>" style="text-decoration: none; color: #FFF;"
                    class="btn btn-success  mt-2">Edit</a>

                  <form action="/deleteGallery/<%= gallery.id %>" method="POST" id="delete-form">

                    <i class="bg-danger"></i>
                    <button type="submit" class="btn btn-danger ">Delete</button>
                  </form>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>
<!-- end main content -->
<!-- import script -->
<script src="../assets/vendor/jquery/jquery.min.js"></script>
<script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="../assets/vendor/jquery.easing/jquery.easing.min.js"></script>
<script src="../assets/vendor/php-email-form/validate.js"></script>
<script src="../assets/vendor/waypoints/jquery.waypoints.min.js"></script>
<script src="../assets/vendor/counterup/jquery.counterup.min.js"></script>
<script src="../assets/vendor/owl.carousel/owl.carousel.min.js"></script>
<script src="../assets/vendor/typed.js/typed.min.js"></script>
<script src="../assets/vendor/venobox/venobox.min.js"></script>

<script src="../assets/js/main.js"></script>

<script>
  $("#menu-toggle").click(function (e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>
<!-- end import script -->
</body>

</html>
