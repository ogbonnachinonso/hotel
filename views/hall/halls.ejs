<%- include('../partials/header') -%>
<section id="hero" class="d-flex align-items-center">
  <div class="container-fluid" data-aos="fade-up">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-lg-6 pt-3 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
        <h1>Our Halls</h1>
        <h2>We have different types of halls for different events . It is the perfect
          place for any type of occasion</h2>
        <h6 class="card-title text-success mt-2">&#8358; <span> 250,000</span></h6>
        <div><a href="/hall" class="btn-get-started scrollto">Book Now</a></div>
      </div>
      <div class="col-xl-4 col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="150">
        <img src="assets/img/hall.jpg" class="img-fluid animated" alt="">
      </div>
    </div>
  </div>

</section>
 <!-- =======Room Gallery Section ======= -->
 <section id="work" class="gallery-mf sect-pt4 route">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="title-box text-center">
          <h3 class="title-a">
            Our Halls
          </h3>
          <p class="subtitle-a px-4 title-ss">
            Below are some of our halls available. Feel free to check through and make the perfect choice for maximum comfort.
          </p>
          <div class="line-m"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <% eventhalls.forEach((eventhall)=>{%> 
      <div class="col-md-4">
        <div class="work-box">
          <a href="<%= eventhall.imgUrl %>" data-gall="galleryGallery" class="venobox">
            <div class="work-img">
              <img src="<%= eventhall.imgUrl %>" alt="" class="img-fluid">
            </div>
          </a>
          <div class="work-content">
            <div class="row">
              <div class="col-sm-8">
                <h2 class="w-title"><%= eventhall.category %></h2>
              </div>
              <div class="col-sm-4">
                <div class="w-like">
                  <a href="/halls/<%= eventhall.id %>"> <span class="btn btn-secondary">ViewHall</span></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

     
      <%})%>
      </div>
    </div>
    <br>

</section>



<%- include('../partials/footer') -%>