<%- include('../partials/header')-%>
<main class="login-pag" id="login" style="background-image: url(assets/img/bg.jpg)" >

  <div class="container login_page">
    <h1 class="mb-3 mt-3 text-white">Add New Hall</h1>
    <%- include('../partials/message')-%>
   
    <form action="/ourHall" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="category">Category</label>
        <input name="category" id="category" class="form-control" >
        
      </div>
     <div class="form-group">
       <label for="description">Description</label>
       <input name="description" id="description" class="form-control" >
     </div>
     <div class="form-group">
      <label for="cost">Cost</label>
      <input type="number" name="cost" id="cost" class="form-control" >
    </div>
   <div class="form-group">
     <label for="image">Upload Image</label> 
     <input type="file" id="image" 
            name="image" value="" required> 
   </div> 
   <div> 
     <a href="/ourhalls" class="btn btn-danger">Cancel</a>
     <button type="submit" class="btn btn-secondary" >Save</button>
   </div> 
     
    </form>
   </div>
   
</main>


<%- include('../partials/footer')-%>